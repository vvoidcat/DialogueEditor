<UserControl x:Class="DialogueEditor.Views.VariablesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views"
             xmlns:common="clr-namespace:DialogueEditor.Views.CommonControls"
             xmlns:viewModels="clr-namespace:DialogueEditor.ViewModels"
             x:Name="VariablesPanelRoot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:VariablesPanelViewModel/>
    </UserControl.DataContext>

    <Grid Background="{DynamicResource BackgroundPrimaryBrush}">
        <StackPanel Margin="10">
            <Grid Height="20" Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" MinWidth="100" Height="20" Text="search..." Style="{StaticResource TextBoxStyle}"/>
            </Grid>

            <Button Content="New Variable" Margin="20 5" Style="{StaticResource ButtonStyle}"/>

            <ListBox BorderThickness="0">
                <TextBox Text="Name String Value" Height="50"/>
                <TextBox Text="Name2 Int Values" Height="50"/>
            </ListBox>

            <Label Content="/Tags Collection Here/" Background="#FF2C2A37"/>
        </StackPanel>
    </Grid>
</UserControl>
