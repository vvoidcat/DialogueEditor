<UserControl x:Class="DialogueEditor.Views.CommonControls.ShowHideButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views.CommonControls"
             mc:Ignorable="d" 
             x:Name="ShowHideButtonControlRoot"
             d:DesignHeight="450" d:DesignWidth="800">

    <Button 
        Style="{StaticResource ShowHideButtonStyle}"
        Command="{Binding ElementName=ShowHideButtonControlRoot, Path=Command}">

        <Grid Style="{StaticResource ShowHideButtonGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" 
                   Padding="0"
                   Width="{Binding ElementName=ShowHideButtonControlRoot, Path=Width}" 
                   Height="{Binding ElementName=ShowHideButtonControlRoot, Path=Height}" 
                   Style="{StaticResource ShowHideButtonLabelArrowStyle}"/>

            <Label Grid.Column="1" 
                   Padding="5 0 5 5"
                   Width="{Binding ElementName=ShowHideButtonControlRoot, Path=Width}" 
                   Height="{Binding ElementName=ShowHideButtonControlRoot, Path=Height}" 
                   Style="{StaticResource ShowHideButtonLabelStyle}"
                   Content="{Binding ElementName=ShowHideButtonControlRoot, Path=Header}">
            </Label>
        </Grid>

    </Button>

</UserControl>
