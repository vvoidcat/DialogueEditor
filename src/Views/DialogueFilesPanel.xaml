<UserControl x:Class="DialogueEditor.Views.DialogueFilesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views"
             xmlns:common="clr-namespace:DialogueEditor.Views.CommonControls"
             xmlns:behaviors="clr-namespace:DialogueEditor.Views.Behaviors"
             x:Name="DialogueFilesPanelRoot"
             Background="{DynamicResource BackgroundPrimaryBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Label HorizontalAlignment="Center" Content="File History"/>

            <TextBox MinWidth="100" Height="20" Text="{Binding FilterString, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxSearchStyle}"/>

            <Grid Margin="0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Open" Margin="0 0 2 0" Style="{StaticResource ButtonStyle}" Command="{Binding OpenFileExplorerCommand}"/>
                <Button Grid.Column="1" Content="New" Margin="2 0 0 0" Style="{StaticResource ButtonStyle}" Command="{Binding CreateNewDialogueCommand}"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1">
            <Label 
                    Content="No recent files" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding IsVisibleNoItemsInHistoryLabel}"
                    Foreground="{DynamicResource TextSecondaryBrush}"/>

            <ListBox Margin="-1 0"
                    Style="{StaticResource ListBoxStyle}" 
                    ItemsSource="{Binding FilteredHistoryDialogues}"
                    SelectedValue="{Binding SelectedDialogue}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FileExists, RelativeSource={RelativeSource Self}}">
                                <Setter Property="Background" Value="Red"/>
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="behaviors:ListBoxItemDoubleClickBehavior.Command" Value="{Binding DataContext.OpenDialogueFileCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding DisplayName}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Label Content="{Binding LastModifiedString}" Padding="10 0 0 5" FontSize="9" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </Grid>
</UserControl>
