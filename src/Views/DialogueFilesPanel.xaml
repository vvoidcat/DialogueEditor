<UserControl x:Class="DialogueEditor.Views.DialogueFilesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views"
             xmlns:common="clr-namespace:DialogueEditor.Views.CommonControls"
             xmlns:viewModels="clr-namespace:DialogueEditor.ViewModels"
             x:Name="DialogueFilesPanelRoot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:DialogueFilesPanelViewModel/>
    </UserControl.DataContext>

    <Grid Background="{DynamicResource BackgroundPrimaryBrush}">
        <StackPanel Margin="10">
            <common:FileSearchControl/>

            <Button Content="New Dialogue" Margin="20 5" Style="{StaticResource ButtonStyle}"/>

            <ListBox BorderThickness="0">
                <Label Content="Dlg1"/>
                <Label Content="Dlg2"/>
                <Label Content="aaa"/>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
