<UserControl x:Class="DialogueEditor.Views.NodeSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views"
             mc:Ignorable="d" 
             x:Name="NodeSettingsRoot"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundPrimaryBrush}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Padding="5"
                     VerticalAlignment="Stretch" 
                     Style="{StaticResource TextBoxStyle}"
                     Text="{Binding Path=DataContext.ActiveDialogueSelectedNode.Text, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}, Mode=TwoWay}" />

            <GroupBox Grid.Column="1" Header="Variables" Margin="10" Style="{StaticResource GroupBoxStyle}"/>
        </Grid>
    </Grid>
</UserControl>
