<UserControl x:Class="DialogueEditor.Views.NodeSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogueEditor.Views"
             mc:Ignorable="d" 
             x:Name="NodeSettingsRoot"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundPrimaryBrush}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TEXT -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right">
                    <Label Padding="0" Margin="0 2 0 0" Content="Speaker:"/>
                    <ComboBox DockPanel.Dock="Right" Margin="10 0 0 0" Width="100"/>
                </DockPanel>
                
                <Label Grid.Row="0" Grid.Column="0" Margin="0 2 0 0" Padding="0" Content="Text:"/>

                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                     Padding="5"
                     VerticalAlignment="Stretch" 
                     Style="{StaticResource TextBoxStyle}"
                     Text="{Binding Path=DataContext.ActiveDialogueSelectedNode.Text, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}, Mode=TwoWay}" />
            </Grid>

            <GroupBox Grid.Column="1" Header="Markup" Margin="5 0" Style="{StaticResource GroupBoxStyle}"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Conditions" Margin="5 0" Style="{StaticResource GroupBoxStyle}"/>
                <GroupBox Grid.Row="1" Header="Variable Setters" Margin="5 0" Style="{StaticResource GroupBoxStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
