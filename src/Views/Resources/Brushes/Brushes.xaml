<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{DynamicResource BackgroundPrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{DynamicResource BackgroundSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{DynamicResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{DynamicResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentBrightBrush" Color="{DynamicResource AccentBrightColor}"/>
    <SolidColorBrush x:Key="BordersBrush" Color="{DynamicResource AccentLightColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextAccentBrush" Color="{DynamicResource TextAccentColor}"/>
    <SolidColorBrush x:Key="TextAccentBrightBrush" Color="{DynamicResource TextAccentBrightColor}"/>

    <LinearGradientBrush x:Key="LightAccentLinearGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="0"/>
        <GradientStop Color="Transparent" Offset="0.3"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightToPrimaryAccentCenteredGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="0"/>
        <GradientStop Color="{DynamicResource AccentPrimaryColor}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="1.1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightToPrimaryAccentCenteredGradientHorizontal" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource AccentPrimaryColor}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>