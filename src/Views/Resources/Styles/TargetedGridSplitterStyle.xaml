<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:common="clr-namespace:DialogueEditor.Views.CommonControls">

    <Style x:Key="TargetedGridSplitterStyle" TargetType="common:TargetedGridSplitter">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource LightToPrimaryAccentCenteredGradient}"/>
        <Setter Property="Margin" Value="0"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{DynamicResource BackgroundPrimaryBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Cursor" Value="SizeWE"/>
                <Setter Property="Width" Value="3"/>
                <Setter Property="Height" Value="Auto"/>
            </Trigger>

            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Cursor" Value="SizeNS"/>
                <Setter Property="Height" Value="3"/>
                <Setter Property="Width" Value="Auto"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>